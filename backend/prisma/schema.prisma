generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  googleId    String   @unique
  name        String
  avatarUrl   String?
  isVerified  Boolean  @default(false)
  otpCode     String?
  otpExpiry   DateTime?
  createdAt   DateTime @default(now())
}
